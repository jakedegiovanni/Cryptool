<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".VigenereMain"
    tools:showIn="@layout/activity_vigenere_cipher">

    <Button
        android:id="@+id/encrypt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/encrypt"
        android:layout_marginLeft="@dimen/button_margin"
        android:layout_marginStart="@dimen/button_margin"/>

    <Button
        android:id="@+id/decrypt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/decrypt"
        android:layout_toRightOf="@id/encrypt"
        android:layout_toEndOf="@id/encrypt"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/msgtxt"
        android:hint="Please type in your message to encrypt/decrypt"
        android:layout_marginTop="47dp"
        android:layout_below="@+id/encrypt"
        android:editable="true"
        android:inputType="textAutoCorrect|text"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/outMsg"
        android:gravity="left"
        android:layout_marginTop="181dp"
        android:layout_below="@+id/msgtxt"
        android:layout_centerHorizontal="true"
        android:hint="Final Message" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/keyText"
        android:hint="Please type in your secret key"
        android:layout_marginTop="41dp"
        android:editable="true"
        android:inputType="textAutoCorrect|text"
        android:layout_below="@+id/msgtxt"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
