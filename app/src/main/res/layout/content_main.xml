<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="degiovanni.jake.cryptool.MainActivity"
    tools:showIn="@layout/activity_main">

    <Button
        android:layout_width="fill_parent"
        android:layout_height="75dp"
        android:layout_marginTop="130dp"
        android:textSize="30sp"
        android:text="Caesar Cipher"
        android:id="@+id/cae"
        android:background="@color/colorGreyPrimary"
        android:fontFamily="Verdana"
        android:shadowColor="#000000"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="75dp"
        android:text="Vigenere Cipher"
        android:padding="16dp"
        android:textSize="30sp"
        android:textColor="@color/colorMainButtonText"
        android:background="@color/colorGreySecondary"
        android:id="@+id/vig"
        android:fontFamily="Verdana"
        android:shadowColor="#000000" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="75dp"
        android:text="Rot13 Cipher"
        android:padding="16dp"
        android:textSize="30sp"
        android:textColor="@color/colorMainButtonText"
        android:background="@color/colorGreyPrimary"
        android:id="@+id/rot"
        android:fontFamily="Verdana"
        android:shadowColor="#000000" />

</LinearLayout>
